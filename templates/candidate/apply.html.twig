{% extends 'base.html.twig' %}

{% block title %}Candidature - Étape {{ currentStep }}/{{ totalSteps }}{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Formulaire de Candidature</h1>
            
            {# Indicateur de progression #}
            <div class="progress mb-4" style="height: 30px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: {{ progress }}%;" 
                     aria-valuenow="{{ progress }}" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                    Étape {{ currentStep }} / {{ totalSteps }}
                </div>
            </div>

            {# Affichage conditionnel selon l'étape #}
            {% if currentStepName == 'summary' %}
                {# Étape finale : Résumé #}
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>Résumé de votre candidature</h3>
                    </div>
                    <div class="card-body">
                        <h5>Informations personnelles</h5>
                        <ul class="list-unstyled">
                            <li><strong>Prénom :</strong> {{ candidate.firstName }}</li>
                            <li><strong>Nom :</strong> {{ candidate.lastName }}</li>
                            <li><strong>Email :</strong> {{ candidate.email }}</li>
                            {% if candidate.phone %}
                                <li><strong>Téléphone :</strong> {{ candidate.phone }}</li>
                            {% endif %}
                        </ul>

                        <hr>

                        <h5 class="mt-3">Expérience</h5>
                        {% if candidate.hasExperience %}
                            <p><strong>A de l'expérience :</strong> <span class="badge bg-success">Oui</span></p>
                            <p><strong>Détails :</strong></p>
                            <p class="border p-3 bg-light">{{ candidate.experienceDetails }}</p>
                        {% else %}
                            <p><strong>A de l'expérience :</strong> <span class="badge bg-secondary">Non</span></p>
                        {% endif %}

                        <hr>

                        <h5 class="mt-3">Disponibilité</h5>
                        {% if candidate.availabilityDate %}
                            <p><strong>Date de disponibilité :</strong> {{ candidate.availabilityDate|date('d/m/Y') }}</p>
                        {% endif %}
                    </div>
                </div>

                {# Boutons de navigation pour le résumé #}
                {{ form_start(form) }}
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" name="action" value="previous" class="btn btn-secondary">
                            ← Retour
                        </button>
                        <button type="submit" class="btn btn-success btn-lg">
                            ✓ Soumettre ma candidature
                        </button>
                    </div>
                {{ form_end(form) }}

            {% else %}
                {# Étapes intermédiaires : Affichage du formulaire #}
                <div class="card">
                    <div class="card-header bg-light">
                        <h4>
                            {% if currentStepName == 'personal_info' %}
                                Informations personnelles
                            {% elseif currentStepName == 'experience' %}
                                Votre expérience
                            {% elseif currentStepName == 'availability' %}
                                Votre disponibilité
                            {% elseif currentStepName == 'consent' %}
                                Consentement RGPD
                            {% endif %}
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            
                            <div class="d-flex justify-content-between mt-4">
                                {% if not isFirstStep %}
                                    <button type="submit" name="action" value="previous" class="btn btn-secondary">
                                        ← Précédent
                                    </button>
                                {% else %}
                                    <div></div>
                                {% endif %}
                                
                                <button type="submit" class="btn btn-primary">
                                    Suivant →
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}