{% extends 'base.html.twig' %}

{% block title %}Candidature - Étape {{ form.vars.cursor.stepIndex + 1 }}/{{ form.vars.cursor.totalSteps }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Formulaire de Candidature</h1>
            
            {# Indicateur de progression #}
            <div class="progress mb-4" style="height: 30px;">
                {% set progress = (form.vars.cursor.stepIndex + 1) / form.vars.cursor.totalSteps * 100 %}
                <div class="progress-bar" role="progressbar" 
                     style="width: {{ progress }}%;" 
                     aria-valuenow="{{ progress }}" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                    Étape {{ form.vars.cursor.stepIndex + 1 }} / {{ form.vars.cursor.totalSteps }}
                </div>
            </div>

            {# Affichage conditionnel selon l'étape #}
            {% if form.vars.cursor.currentStepName == 'summary' %}
                {# Étape 5 : Résumé #}
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>Résumé de votre candidature</h3>
                    </div>
                    <div class="card-body">
                        <h5>Informations personnelles</h5>
                        <ul>
                            <li><strong>Prénom :</strong> {{ candidate.firstName }}</li>
                            <li><strong>Nom :</strong> {{ candidate.lastName }}</li>
                            <li><strong>Email :</strong> {{ candidate.email }}</li>
                            {% if candidate.phone %}
                                <li><strong>Téléphone :</strong> {{ candidate.phone }}</li>
                            {% endif %}
                        </ul>

                        <h5 class="mt-3">Expérience</h5>
                        {% if candidate.hasExperience %}
                            <p><strong>A de l'expérience :</strong> Oui</p>
                            <p><strong>Détails :</strong> {{ candidate.experienceDetails }}</p>
                        {% else %}
                            <p><strong>A de l'expérience :</strong> Non</p>
                        {% endif %}

                        <h5 class="mt-3">Disponibilité</h5>
                        <p><strong>Date de disponibilité :</strong> {{ candidate.availabilityDate|date('d/m/Y') }}</p>
                    </div>
                </div>

                {# Formulaire avec seulement les boutons de navigation #}
                {{ form_start(form) }}
                    <div class="d-flex justify-content-between mt-4">
                        {{ form_row(form.navigator) }}
                    </div>
                {{ form_end(form) }}
            {% else %}
                {# Étapes 1-4 : Affichage du formulaire normal #}
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            
                            <div class="d-flex justify-content-between mt-4">
                                {{ form_row(form.navigator) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}